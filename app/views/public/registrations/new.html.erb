<p class="notice"><%= flash[:notice] %></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>



        <div class="form-group row">
          <div class="col-4"><%= f.label :email %></div>
          <div class="col-4"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
        </div>

        <div class="form-group row">
          <div class="col-4"><%= f.label :password %></div>
          <div class="col-4"><%= f.password_field :password, autocomplete: "new-password" %></div>
        </div>
  
        <div class="form-group row">
          <div class="col-4"><%= f.label :team_id %></div>
          <div class="col-4"><%= f.select :team_id, options_from_collection_for_select(Team.all, :id, :team_name) %></div>
        </div>

        <div class="form-group row">
          <div class="col-4"><%= f.label :name %></div>
          <div class="col-4"><%= f.text_field :name, autofocus: true, autocomplete: "name" %></div>
        </div>

        <div class="form-group row">
          <div class="col-4"><%= f.label :age %></div>
          <div class="col-4"><%= f.number_field :age %></div>
        </div>

        <div class="form-group row">
          <div class="col-4"><%= f.label :number %></div>
          <div class="col-4"><%= f.number_field :number %></div>
        </div>

        <div class="form-group row">
          <div class="col-4"><%= f.label :position %></div>
          <div class="col-4"><%= f.select :position, [['ピヴォ','ピヴォ'], ['アラ','アラ'], ['フィクソ','フィクソ'], ['ゴレイロ','ゴレイロ']] %></div>
        </div>

        <% if @user.id === nil %>
          <div class="form-group row">
            <div class="col-4"><%= f.label :speed_rate %></div>
            <div class="col-4" id="star">
            </div>
          </div>
          <div class="form-group row">
            <div class="col-4"><%= f.label :power_rate %></div>
            <div class="col-4" id="star2">
            </div>
          </div>
          <div class="form-group row">
            <div class="col-4"><%= f.label :tactics_rate %></div>
            <div class="col-4" id="star3">
            </div>
          </div>

          <script>
          $(document).on('turbolinks:load', function() {
            $('#star').empty();
            $('#star').raty({
              size     : 36,
              starOff:  '<%= asset_path("star-off.png") %>',
              starOn : '<%= asset_path("star-on.png") %>',
              starHalf: '<%= asset_path("star-half.png") %>',
              scoreName: 'user[speed_rate]',
              half: true,
            });
            $('#star2').empty();
            $('#star2').raty({
              size     : 36,
              starOff:  '<%= asset_path("star-off.png") %>',
              starOn : '<%= asset_path("star-on.png") %>',
              starHalf: '<%= asset_path("star-half.png") %>',
              scoreName: 'user[power_rate]',
              half: true,
            });
            $('#star3').empty();
            $('#star3').raty({
              size     : 36,
              starOff:  '<%= asset_path("star-off.png") %>',
              starOn : '<%= asset_path("star-on.png") %>',
              starHalf: '<%= asset_path("star-half.png") %>',
              scoreName: 'user[tactics_rate]',
              half: true,
            });
          })
          </script>
        <% else %>
          <%= render "users/static_rate", user: @user %>
        <% end %>

        <div class="form-group row">
          <div class="col-6 mr-4"></div>
          <div class="col-5"><%= f.submit 'Sign up', class: "btn btn-info" %></div>
        </div>
      <% end %>

    </div>
  </div>
</div>
