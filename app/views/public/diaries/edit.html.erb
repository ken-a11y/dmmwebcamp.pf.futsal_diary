<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Diary</h2>
      <%= render 'layouts/errors', obj: @diary %>
      <%= render 'form', diary: @diary, tags: @tags %>
      <span>
        <%= link_to "Show", diary_path(@diary), class: "diary_#{@diary.id}" %>
      </span>
      |
      <span>
        <%= link_to "Back", diaries_path, class: "back" %>
      </span>
    </div>
  </div>
</div>