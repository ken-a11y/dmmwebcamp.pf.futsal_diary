<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>New Diary</h1>
      <%= render 'layouts/errors', obj: @diary %>
<%= form_with model: @diary,local:true do |f| %>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.label :place %>
    <%= f.text_field :place, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :result %>
    <%= f.select :result, [['WIN','WIN'], ['LOSE','LOSE'], ['DRAW','DRAW']] %>
  </div>

  <div class="form-group">
    <%= f.label :good %>
    <%= f.text_area :good, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :bad %>
    <%= f.text_area :bad, class: 'form-control' %>
  </div>

  <div class="form-group">
      <%# 推奨タグ3個を表示 %>
      <div class="check-box">
        <%= collection_check_boxes(:diary, :tag_ids, @tags.limit(3), :id, :tag_name) do |b| %>
        <%= b.label { b.check_box + b.text } %>
        <% end %>
      </div>
    <%= f.text_field :tag_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit '投稿', class: 'btn btn-success' %>
  </div>
<% end %>
    </div>
  </div>
</div>