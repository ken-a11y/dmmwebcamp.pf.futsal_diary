<h1>日記投稿フォーム</h1>
  <%= form_with model: @diary do |f| %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>場所</h4>
      <%= f.text_field :place %>
    <h4>結果</h4>
      <%= f.select :result, [['WIN',1], ['LOSE',2], ['DRAW',3]] %>
    <h4>良かった点</h4>
      <%= f.text_area :good %>
    <h4>悪かった点</h4>
      <%= f.text_area :bad %>
    <h4>タグ</h4>
    <%# @tags.limit(3).each do |tag| %>
      <%# 推奨タグ3個を表示 %>
      <div class="check-box">
        <%#= check_box :tag_id, tag.id, checked: tag.tactic_tags.exists?(diary_id: @diary.id) %>
        <%#= label_tag :tag_id, tag.tag_name %>
        <%= collection_check_boxes(:diary, :tag_ids, @tags.limit(3), :id, :tag_name) do |b| %>
          <%= b.label { b.check_box + b.text } %>
        <% end %>
      </div>
    <%# end %>
    <%= f.text_field :tag_name %>
    <%= f.submit '投稿' %>
  <% end %>