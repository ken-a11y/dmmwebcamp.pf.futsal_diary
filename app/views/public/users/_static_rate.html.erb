<div id="rate_<%= user.id %>" class="form-group"></div>
<script>
$(document).on('turbolinks:load', function() {
  $('#rate_<%= user.id %>').empty();
  $('#rate_<%= user.id %>').raty({
    size: 20,
    starOff:  '<%= asset_path("star-off.png") %>',
    starOn : '<%= asset_path("star-on.png") %>',
    starHalf: '<%= asset_path("star-half.png") %>',
    half: true,
    readOnly: true,
    score: <%= user.rate %>,
  });
});
</script>