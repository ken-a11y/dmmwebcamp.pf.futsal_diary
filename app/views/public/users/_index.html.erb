<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user) do %>
            <%= image_tag user.profile_image.variant(resize_to_limit: [50, 50]) %>
          <% end %>
        </td>
        <td><%= user.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>