<div class="container px-5 px-sm-0">
  <h2>Team Detail</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Introduction</th>
            <th>Members</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tr>
          <td><%= image_tag @team.get_team_image %></td>
          <td><%= @team.team_name %></td>
          <td><%= @team.introduction %></td>
          <td>
            <%= render 'public/users/index',users: @users %>
          </td>
          <td>
            <% if @team.is_owned_by?(current_user) %>
              <%= link_to 'Edit', edit_team_path(@team), class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>