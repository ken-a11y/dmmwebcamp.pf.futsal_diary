<div class="container px-5 px-sm-0">
  <h2>Team Detail</h2>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Introduction</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tr>
        <td><%= image_tag @team.get_team_image(100,100) %></td>
        <td><%= @team.team_name %></td>
        <td><%= @team.introduction %></td>
        <td>
          <% if @team.is_owned_by?(current_user) %>
            <%= link_to 'Edit', edit_team_path(@team), class: "btn btn-sm btn-success" %>
            <%= link_to 'Notice an Event', new_team_event_notice_path(@team), class: "btn btn-sm btn-info ml-4" %>
          <% end %>
        </td>
      </tr>
    </table>
    <div class="row mt-3">
      <% @users.each do |user| %>
      <div class="col-sm-4 col-md-3 text-center">
        <div class="card-list-container">
          <div class="card mt-4 shadow-lg">
            <%= link_to user_path(user) do %>
              <%= image_tag user.profile_image.variant(resize_to_limit: [50, 50]) %>
            <% end %>
            <div class="card-body">
              <p class="card-title"><%= user.name %></p>
              <p class="card-text"><%= user.position %></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
</div>