<table>
  <tbody>
      <% diary.diary_comments.each do |diary_comment| %>
      <tr>

        <td>
          <%= link_to user_path(diary_comment.user) do %>
            <%= image_tag diary_comment.user.profile_image.variant(resize_to_limit: [50, 50]) %><br>
            <%= diary_comment.user.name %>
          <% end %>
        </td>
        <td><%= diary_comment.comment %></td>
        <td>
          <% if diary_comment.user == current_user %>
            <%= link_to "Destroy", diary_diary_comment_path(diary, diary_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
