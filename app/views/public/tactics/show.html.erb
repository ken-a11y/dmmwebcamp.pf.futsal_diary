<div class="container">
  <h2>Tactics Detail</h2>
  <div class="row justify-content-between">
    <% @tactic.tactic_items.each do |tactic_item| %>
      <div class="col-md-3 mb-4"><%= image_tag tactic_item.get_tactic_image(400,400) %></div>
      <div class="col-md-8 mb-4"><%= simple_format(tactic_item.description.gsub(/\n/, "<br>")) %></div>
    <% end %>
  </div>
</div>