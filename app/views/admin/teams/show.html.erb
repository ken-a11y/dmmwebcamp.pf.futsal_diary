<div class="container px-5 px-sm-0">
  <h2>Team Detail</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Introduction</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tr>
      <td><%= image_tag @team.get_team_image(100,100) %></td>
      <td><%= @team.team_name %></td>
      <td><%= @team.introduction %></td>
      <td><%= link_to 'Edit', edit_admin_team_path(@team), class: "btn btn-sm btn-success" %></td>
      <td><%= link_to 'Destroy', admin_team_path(@team), method: :delete, class: "team_#{@team.id} btn btn-sm btn-danger" %></td>
    </tr>
  </table>
  <div class="row mt-3">
    <% @users.each do |user| %>
    <div class="col-2 text-center">
      <div class="card-list-container">
        <div class="card mt-4 shadow-lg">
          <%= link_to admin_user_path(user) do %>
            <%= image_tag user.profile_image.variant(resize_to_limit: [50, 50]) %>
          <% end %>
          <div class="card-body">
            <p class="card-title"><%= user.name %></p>
            <p class="card-text"><%= user.position %></p>
          </div>
        </div>
      </div>
 
    </div>
    <% end %>
  </div>
</div>  