<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.profile_image.variant(resize_to_limit: [50, 50]) %></td>
        <td><%= user.name %></td>
        <% if user.is_deleted == "æœ‰åŠ¹" %>
          <td class="text-success font-weight-bold"><%= user.is_deleted %></td>
        <% else %>
          <td class="text-black-50 font-weight-bold"><%= user.is_deleted %></td>
        <% end %>
        <td><%= link_to 'Show', admin_user_path(user), class: "admin_user_#{user.id}" %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user), class: "admin_user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>